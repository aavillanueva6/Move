{{category.name}}
<div class='row'>
  <div class='col-md-8'>
    {{#each posts as |post|}}
      <div class='row mb-4 post'>
        <div class='col-md-5'>
          <h2>
            <a href='/post/{{post.id}}'>{{post.title}}</a>
          </h2>
          <p>Created by
            {{post.user.username}}
            on
            {{format_date post.date_created}}</p>
        </div>
        <div class='col-md-7'>
          <p>
            {{post.content}}
          </p>
        </div>
      </div>
    {{/each}}
  </div>

  {{>socketClient}}

</div>